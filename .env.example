# TT Tracker — Environment Variables
# Copy to .env and fill in real values before starting

# Admin bootstrap (only needed on first run when no users exist)
ADMIN_USER=admin
ADMIN_PASS=CHANGE_ME

# Session & security
SESSION_SECRET=replace-with-a-long-random-string
DB_TOKEN=replace-with-a-shared-secret

# TLS (optional — enables HTTPS with HTTP redirect)
TLS_CERT=/etc/letsencrypt/live/your-domain/fullchain.pem
TLS_KEY=/etc/letsencrypt/live/your-domain/privkey.pem
